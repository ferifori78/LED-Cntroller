<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MICROPHONE" />
    <uses-permission android:name="android.permission.CAPTURE_AUDIO_OUTPUT"
        tools:ignore="ProtectedPermissions"/>
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <application
        android:label="magic_rgb"
        android:name="${applicationName}"
        android:icon="@mipmap/ic_launcher"
        android:allowAudioPlaybackCapture="true"
        android:requestLegacyExternalStorage="true"
        android:enableOnBackInvokedCallback="true">

        <meta-data
            android:name="foreground_notification_channel_name"
            android:value="Audio Visualization" />
        <meta-data
            android:name="foreground_notification_channel_description"
            android:value="System audio capture for LED effects" />

        <service
            android:name="com.pravera.flutter_foreground_task.service.ForegroundService"
            android:foregroundServiceType="mediaProjection"
            android:exported="false"
            tools:ignore="MissingClass" />

        <service
            android:name="com.pravera.flutter_foreground_task.service.ForegroundService"
            android:foregroundServiceType="microphone|mediaProjection"
            android:exported="false" />

        <service
            android:name="com.foregroundservice.ForegroundService"
            android:foregroundServiceType="mediaProjection"
            android:exported="false"
            tools:ignore="MissingClass" />

        <service
            android:name="com.pravera.flutter_foreground_task.ForegroundService"
            android:foregroundServiceType="microphone"
            android:exported="false"
            tools:ignore="MissingClass" />

        <service
            android:name="com.princeparmar12.foreground_service.ForegroundService"
            android:foregroundServiceType="mediaProjection|microphone"
            android:exported="false"
            tools:ignore="MissingClass" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:launchMode="singleTop"
            android:theme="@style/LaunchTheme"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="io.flutter.embedding.android.NormalTheme"
                android:resource="@style/NormalTheme" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <meta-data
            android:name="flutterEmbedding"
            android:value="2" />
    </application>
</manifest>